<div class="main w-full h-screen">
    <% if (query) { %>
        <div class="search-results">
            <h2>Search Results for: <%= query %></h2>
            <% if (users.length > 0) { %>
                <ul>
                    <% users.forEach(user => { %>
                        <li><a href="/profile/<%= user.username %>"><%= user.fullname %> (@<%= user.username %>)</a></li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>No users found.</p>
            <% } %>
        </div>
    <% } %>
</div>